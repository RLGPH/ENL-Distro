<Window x:Class="ENL_Distrobution_Storage.Product_add_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ENL_Distrobution_Storage"
        mc:Ignorable="d"
        Title="Product_add_window" Height="241" Width="340">
    <Grid>
        <TextBox x:Name="TB_name" HorizontalAlignment="Right" Margin="0,0,5,180" TextWrapping="Wrap" Text="insert name" VerticalAlignment="Bottom" Height="22" Width="204"/>
        <Label x:Name="dev_here_pls_kill_me" Content="Product name" HorizontalAlignment="Right" Margin="0,0,214,180" VerticalAlignment="Bottom"/>
        <TextBox x:Name="TB_shelf" HorizontalAlignment="Right" Margin="0,0,5,156" TextWrapping="Wrap" Text="insert Shelf" VerticalAlignment="Bottom" Width="204" Height="19"/>
        <Label Content="location" HorizontalAlignment="Right" Margin="0,0,222,139" VerticalAlignment="Bottom"/>
        <TextBox x:Name="TB_row" HorizontalAlignment="Right" Margin="0,0,5,132" TextWrapping="Wrap" Text="insert Row" VerticalAlignment="Bottom" Width="204" Height="19"/>
        <TextBox x:Name="TB_amount" HorizontalAlignment="Right" Margin="0,0,5,108" TextWrapping="Wrap" Text="insert amount" VerticalAlignment="Bottom" Width="204" Height="19" />
        <Label Content="Amount of product" HorizontalAlignment="Right" Margin="0,0,214,104" VerticalAlignment="Bottom"/>
        <Label Content="Description" HorizontalAlignment="Right" Margin="0,0,214,73" VerticalAlignment="Bottom" Width="78"/>
        <TextBox x:Name="TB_description" HorizontalAlignment="Right" Margin="0,0,5,31" TextWrapping="Wrap" Text="Descripetion" VerticalAlignment="Bottom" Width="204" Height="60"/>
        <Button x:Name="BTN_save" Content="Save" HorizontalAlignment="Right" Margin="0,0,222,31" VerticalAlignment="Bottom" Height="37" Width="43" Click="BTN_save_Click"/>
        <Button x:Name="BTN_cancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,270,31" VerticalAlignment="Bottom" Height="37" Width="43" Click="BTN_Cancel_Click"/>
    </Grid>
</Window>
