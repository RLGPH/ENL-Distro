<Window x:Class="ENL_Distrobution_Storage.Productpage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ENL_Distrobution_Storage"
        mc:Ignorable="d"
        Title="Productpage" Height="450" Width="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,10,0,143" HorizontalAlignment="Center" Width="780" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"/>
                <DataGridTextColumn Header="Name"/>
                <DataGridTextColumn Header="Description"/>
                <DataGridTextColumn Header="Lokation"/>
                <DataGridTextColumn Header="Amount"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_close_window" Content="close" HorizontalAlignment="Left" Margin="45,320,0,0" VerticalAlignment="Top" Height="32" Width="64"/>
        <Button x:Name="btn_add" Content="ADD" HorizontalAlignment="Left" Margin="171,320,0,0" VerticalAlignment="Top" Height="32" Width="64" Click="btn_add_Click"/>
        <Button x:Name="btn_remove" Content="Remove" HorizontalAlignment="Left" Margin="292,320,0,0" VerticalAlignment="Top" Height="32" Width="64"/>
        <Button x:Name="btn_edit" Content="Edit" HorizontalAlignment="Right" Margin="0,0,565,45" VerticalAlignment="Bottom" Height="32" Width="64"/>
    </Grid>
</Window>
